{
  "name": "bedrock-openai-proxy",
  "version": "1.0.0",
  "description": "OpenAI-compatible API proxy for AWS Bedrock",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:full": "./scripts/build.sh",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "dev": "ts-node src/index.ts",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh --environment dev",
    "deploy:staging": "./scripts/deploy.sh --environment staging",
    "deploy:prod": "./scripts/deploy.sh --environment prod"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.857.0",
    "@aws-sdk/client-ssm": "^3.857.0",
    "@aws-sdk/client-sts": "^3.857.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.6.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "aws",
    "bedrock",
    "openai",
    "proxy",
    "serverless"
  ],
  "author": "",
  "license": "MIT"
}
